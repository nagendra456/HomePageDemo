<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

 <RelativeLayout
     android:layout_marginTop="10dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.5"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <android.support.v7.widget.CardView
         app:cardCornerRadius="2dp"
         android:id="@+id/card_view"
         android:layout_width="match_parent"
         android:layout_height="260dp"
         android:layout_gravity="center"
         android:layout_marginBottom="8dp"
         android:layout_marginLeft="12dp"
         android:layout_marginRight="12dp"
         android:foreground="?attr/selectableItemBackground">
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
        <FrameLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="2 BHK in BTM Layout 2nd stage"
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_gravity="right"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#e6e2e2" />

                </FrameLayout>

                <FrameLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@drawable/rectangle"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_likes_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </FrameLayout>

                <FrameLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/call_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_gravity="left"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#e6e2e2" />

                </FrameLayout>
            </LinearLayout>

        </FrameLayout>
         <FrameLayout
             android:layout_weight="0.8"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <ImageView
                 android:id="@+id/iv_home_thumbnail"
                 android:scaleType="fitXY"
                 android:src="@drawable/image1"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />

         </FrameLayout>
         <FrameLayout
             android:layout_weight="1.5"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <FrameLayout
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <TextView
                         android:textSize="15sp"
                         android:textStyle="bold"
                         android:text="Rs 8000"
                         android:id="@+id/tv_price"
                         android:layout_gravity="center"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />

                     <View
                         android:layout_gravity="right"
                         android:layout_width="1dp"
                         android:layout_height="match_parent"
                         android:background="#cfcbcb" />

                 </FrameLayout>

                 <FrameLayout
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <TextView
                         android:textSize="12sp"
                         android:text="Semi Furnished"
                         android:id="@+id/tv_furnished"
                         android:layout_gravity="center"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />

                 </FrameLayout>

                 <FrameLayout
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <TextView
                         android:textSize="13sp"
                         android:text="700 Sq.ft"
                         android:id="@+id/tv_area"
                         android:layout_gravity="center"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                     <View
                         android:layout_gravity="left"
                         android:layout_width="1dp"
                         android:layout_height="match_parent"
                         android:background="#cfcbcb" />

                 </FrameLayout>
             </LinearLayout>

         </FrameLayout>
         </LinearLayout>
     </android.support.v7.widget.CardView>


 </RelativeLayout>



</android.support.constraint.ConstraintLayout>